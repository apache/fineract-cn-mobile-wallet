<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/launcherFragment">

    <fragment android:id="@+id/launcherFragment"
        android:name="org.mifos.mobile_wallet_cn.auth.launcher.LauncherFragment"
        android:label="fragment_launcher"
        tools:layout="@layout/fragment_launcher">

        <action
            android:id="@+id/action_launcherFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/launcherFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment android:id="@+id/loginFragment"
        android:name="org.mifos.mobile_wallet_cn.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <action android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment"/>

    </fragment>

    <fragment android:id="@+id/signupFragment"
        android:name="org.mifos.mobile_wallet_cn.auth.signup.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup">

    </fragment>
</navigation>